@charset "utf-8";
.div_scroll {
	width: 100%;
	height: 370px;
	overflow: auto;
	float: left;
}	
.scroll_container {
	overflow: hidden;
	position: relative;
	background-color: #F8F8F8;
}

.scroll_absolute {
    position: absolute;
}

.scroll_vertical_bar {
    position: absolute;
    top: 0;
    right: 0;
    width: 20px;
    height: 366px;
    margin: 0;
    padding: 0;
    border: 1px solid #e5e5e5;
	background: #f1f1f1;
	border-radius: 1px;
}

.scroll_track {
	position: relative;
	width: 3px;
	height: 360px;
	margin: 9px auto;
	background: #a5a5a5;
	overflow: hidden;
}

.scroll_drag {
	position: relative;
	top: 0;
	left: 0;
	cursor: pointer;
	width: 5px;
	height: 10px;
	background: #000;
}

.scroll_arrow {
	display: block;
	text-align: center;
	width: 0px;
	height: 6px;
	overflow: hidden;
	border: 14px solid #000;
	border-color: #000 #f1f1f1;
	margin-left: 4px;
	cursor: pointer;
}
.scroll_arrow_up{
	border-width: 0 6px 7px 6px;
}
.scroll_arrow_down{
	border-width: 7px 6px 0 6px;
}

